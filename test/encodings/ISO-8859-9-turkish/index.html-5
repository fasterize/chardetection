    <script type="text/javascript">
        var ua = navigator.userAgent.toLowerCase();
        var isAndroid = ua.indexOf("android") > -1;
        var isIpad = ua.indexOf("ipad") > -1;
        var isIphone = ua.indexOf("iphone") > -1;
        function fooInit() {
            setTimeout(function () {
                $(".tableNew").footable();
                $('.tableNew').trigger('footable_initialize');
                $('.tableNew').trigger('footable_resize');
                $('.tableNew').trigger('footable_redraw');
                $('.tableNew').trigger("footable_expand_all");
            }, 1);

        }
        var xmldata,
            faizDeger,
            taksitTutar,
            toplamTutar;
        var version = new Date().getTime();
        //<![CDATA[
        //ga('set', 'dimension1', 'Homepage');
        function customScroll() {
            if (!isIpad && !isIphone && !isAndroid) {
                $('.tabsBtn-areaContainer').jScrollPane();
            }
        }
        $(document).ready(function () {


            var sliderItem = $("#slider .item").length > 1 ? true : false;
            var slider = $("#slider").owlCarousel({
                loop: sliderItem,
                dots: true,
                dotsData: true,
                nav: false,
                items: 1,
                autoplay: true,
                autoplayTimeout: 8000,
                mouseDrag: false,
                autoplayHoverPause: false,
                animateOut: 'fadeOut',
                animateIn: 'fadeIn'
            });

            var sliderNotice = $(".newsSlide .item").length > 1 ? true : false;
            var noticeSlider = $(".newsSlide").owlCarousel({
                loop: sliderNotice,
                dots: false,
                dotsData: true,
                nav: false,
                items: 1,
                autoplay: true,
                autoplayTimeout: 5000,
                mouseDrag: false,
                autoplayHoverPause: false,
                animateOut: 'fadeOut',
                animateIn: 'fadeIn'
            });


            getBannerImg();

            $(".tabsBtn a").click(function () {

                var tabindex = $(this).index();
                $(".tabsBtn a").removeClass("tabsBtn-selected");
                $(this).addClass("tabsBtn-selected");
                currentContent = $(".tabsBtn-area").eq(tabindex);
                $(".tabsBtn-area").removeClass("active-tab").hide();
                currentContent.show();
                currentContent.addClass("active-tab");
                customScroll();
                return false;
            });
            $(".tabsBtn a:first").click();
            $("a[href=" + window.location.hash + "]").click();
            $("select.selectVal").select2({
                allowClear: true,
                minimumResultsForSearch: -1
            }).on("change", function (e) {
                parseXml();
            });
            $.ajax({
                type: "GET",
                url: root + "xml/ihtiyac-kredisi.xml" + "?v" + version,
                dataType: "xml",
                success: function (data) {
                    xmldata = data;
                    parseXml();
                }
            });
            $("input[name=tutar-slider-text]").number(true, 0, ',', '.');
            $(".slider-one:visible").slider({
                orientation: "horizontal",
                range: "min",
                animate: true,
                min: 1000,
                max: 50000,
                step: 500,
                value: 10000,
                change: function (a, b, c, d) {
                },
                slide: function (event, ui) {
                    $("#tutar-slider-text").val(ui.value);
                    $("#tutar-slider-text").trigger("focus");
                    tutar = ui.value;
                    parseXml();
                },
                stop: function (event, ui) {

                }
            });
            $("#tutar-slider-text").keyup(function () {
                var valMax = $(this).val();
                if (valMax >= 50000) {
                    $(this).val(50000);
                }
                var val = $(this).val().replace(/\./g, "");
                $(".slider-one").slider("value", val);
            });

            //$("#notice").hover(function () {
            //    $('.notice-control').stop().fadeIn("fast");
            //}, function () {
            //    $('.notice-control').stop().fadeOut("fast");
            //});
            $('.notice-control').on('click', function () {
                if ($(this).hasClass("play")) {
                    $('.newsSlide.owl-carousel').trigger('play.owl.autoplay', [1000]);
                    $(this).text("Devam Et");
                }
                else {
                    $('.newsSlide.owl-carousel').trigger('stop.owl.autoplay');
                    $(this).text("Duraklat");
                }
                $(this).toggleClass("play");
            });
        });
        function parseXml() {
            var _this = $(xmldata).find('slider[tutar=' + $("#tutar-slider-text").val() + ']').find('dropdown');
            _this.each(function () {
                vadeAy = $(this).attr("vade");
                if (vadeAy == $("select.selectVal").val()) {
                    faizDeger = $(this).attr("faiz");
                    taksitTutar = $(this).find("result").attr("taksit")
                    toplamTutar = $(this).find("result").attr("toplam")
                    $("#taksitTutar").text(taksitTutar).number(true, 2, ',', '.');
                    $("#geriOdemetutar").text(toplamTutar).number(true, 2, ',', '.');
                    $("#faiz").text(faizDeger);
                    $("#faizPopup").text(faizDeger);
                    return false;
                }
            });
        }
        $(window).on('load resize', function () {
            var layout = $("#wrapper").height();
            var footer = $("#footer").innerHeight();

            var footerMT = $(window).height() - (layout + footer + 37);

            if (footerMT > 0) {
                $(".footer").css("margin-top", footerMT);
            }
        });

        function getBannerImg() {
            $("#slider .item").each(function () {
                var self = $(this);
                self.css('background-image', 'url(' + self.attr("data-bg") + ')');
                self.removeAttr("data-bg");
            });
        }
        function setUrl() {

            $.cookie('calculator', '', { expires: -1 });

            cookie();



            window.location.href = 'https://kredi.qnbfinansbank.com?ref=QNBFinansbank';
        };
    </script>

